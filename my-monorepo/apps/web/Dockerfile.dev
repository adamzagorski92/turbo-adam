# Dev image for the monorepo web app (Vite)
FROM node:22-bookworm-slim

WORKDIR /app

# Prisma engines (installed via workspace) may run during installs; keep OpenSSL available
RUN apt-get update -y \
  && apt-get install -y --no-install-recommends openssl ca-certificates \
  && rm -rf /var/lib/apt/lists/*

# pnpm via corepack (bundled with Node)
RUN corepack enable \
  && corepack prepare pnpm@10.28.1 --activate

# Minimal files for dependency install caching
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./
COPY .npmrc ./.npmrc
COPY apps/web/package.json ./apps/web/package.json
COPY apps/backend/package.json ./apps/backend/package.json
COPY packages/components/package.json ./packages/components/package.json
COPY packages/styles/package.json ./packages/styles/package.json

RUN pnpm install --frozen-lockfile --ignore-scripts

EXPOSE 5173

CMD ["pnpm", "--filter", "web", "dev", "--host", "0.0.0.0", "--port", "5173"]
