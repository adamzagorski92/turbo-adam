{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["build"]
    },
    "test:cov": {
      "dependsOn": ["build"],
      "outputs": [
        "$TURBO_ROOT$/apps/coverage/**",
        "$TURBO_ROOT$/apps/web/coverage/**",
        "$TURBO_ROOT$/packages/components/coverage/**"
      ]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
