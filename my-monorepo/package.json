{
  "name": "my-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "preinstall": "node -e \"const ua=process.env.npm_config_user_agent||''; if(!ua.includes('pnpm')){console.error('‚ùå This repo uses pnpm. Please run: pnpm install'); process.exit(1)}\"",
    "compose:dev:up": "docker compose -f infrastructure/compose/dev.yml up -d",
    "compose:dev:down": "docker compose -f infrastructure/compose/dev.yml down",
    "compose:dev:rebuild": "docker compose -f infrastructure/compose/dev.yml up -d --build --force-recreate",
    "compose:dev:logs": "docker compose -f infrastructure/compose/dev.yml logs -f --tail=100",
    "compose:dev:expose:up": "docker compose -f infrastructure/compose/dev.yml -f infrastructure/compose/dev.expose.yml up -d",
    "compose:dev:expose:down": "docker compose -f infrastructure/compose/dev.yml -f infrastructure/compose/dev.expose.yml down",
    "compose:dev:expose:rebuild": "docker compose -f infrastructure/compose/dev.yml -f infrastructure/compose/dev.expose.yml up -d --build --force-recreate",
    "compose:dev:expose:logs": "docker compose -f infrastructure/compose/dev.yml -f infrastructure/compose/dev.expose.yml logs -f --tail=100",
    "compose:prod:server:pull": "docker compose -f infrastructure/compose/production.server.yml pull",
    "compose:prod:server:up": "docker compose -f infrastructure/compose/production.server.yml up -d --remove-orphans",
    "compose:prod:server:down": "docker compose -f infrastructure/compose/production.server.yml down",
    "compose:prod:server:logs": "docker compose -f infrastructure/compose/production.server.yml logs -f --tail=100",
    "compose:prod:server:migrate": "docker compose -f infrastructure/compose/production.server.yml run --rm migrate",
    "dev": "turbo dev",
    "build": "turbo build"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "turbo": "latest"
  }
}
