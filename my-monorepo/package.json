{
  "name": "my-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "preinstall": "node -e \"const ua=process.env.npm_config_user_agent||''; if(!ua.includes('pnpm')){console.error('‚ùå This repo uses pnpm. Please run: pnpm install'); process.exit(1)}\"",
    "docker:check": "node scripts/docker-check.mjs strict",
    "docker:warn": "node scripts/docker-check.mjs warn",
    "docker:cleanup": "node scripts/docker-check.mjs cleanup",
    "docker:cleanup:sudo": "sudo node scripts/docker-check.mjs cleanup",
    "compose": "node scripts/compose.mjs --help",
    "compose:dev": "node scripts/compose.mjs dev",
    "compose:prod": "node scripts/compose.mjs prod",
    "dev": "turbo dev",
    "build": "turbo build"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "turbo": "latest"
  }
}
